@model PersonAJAX.Models.Email

@using (Html.BeginForm("Index", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Contact Us</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="infoMessage" class="alert alert-info">@TempData["message"]</div>
    

    <div class="form-group">
        @Html.LabelFor(model => model.NameSurname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", placeholder = "Name Surname" } })
            @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Write your message here..." })
            </div>
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <input type="file" name="myFiles" />
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" onclick="showInfoMessage()" />
            </div>
        </div>
    </div>
    }

    <script>
        function togglePasswordVisibility(passwordFieldId) {
            var passwordField = $("#" + passwordFieldId);
            var passwordFieldType = passwordField.attr("type");

            if (passwordFieldType === "password") {
                passwordField.attr("type", "text");
            } else {
                passwordField.attr("type", "password");
            }
        }

        function showInfoMessage() {
            $("#infoMessage").show();
        }
    </script>

<style>
    .form-horizontal {
        max-width: 600px;
        margin: 0 auto;
    }

    .control-label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
    }

    .btn-default {
        background-color: #428bca;
        color: #fff;
    }

        .btn-default:hover {
            background-color: #3071a9;
        }

    .alert-info {
        background-color: #5bc0de;
        color: #fff;
    }

    .toggle-password {
        cursor: pointer;
    }

    input[type="file"] {
        display: block;
        margin-top: 5px;
    }

</style>